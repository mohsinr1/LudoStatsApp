@code {
    List<GameResult> Games = new();
    List<Player> Players = new();
    List<PlayerStats> PlayerStatsList = new();

    bool refreshChart = false;
    bool isLoading = true;

    protected override void OnInitialized()
    {
        LoadData();
    }

    void LoadData()
    {
        Players = Storage.GetPlayers();
        Games = Storage.GetGames();
        PlayerStatsList = CalculatePlayerStats();
        isLoading = false;
    }

    List<PlayerStats> CalculatePlayerStats()
    {
        var stats = new List<PlayerStats>();

        foreach (var player in Players)
        {
            var playerGames = Games.Where(g =>
                g.Winner == player.Name ||
                g.SecondPlace == player.Name ||
                g.ThirdPlace == player.Name ||
                g.Loser == player.Name).ToList();

            if (playerGames.Count > 0)
            {
                var wins = Games.Count(g => g.Winner == player.Name);
                var secondPlaces = Games.Count(g => g.SecondPlace == player.Name);
                var thirdPlaces = Games.Count(g => g.ThirdPlace == player.Name);
                var losses = Games.Count(g => g.Loser == player.Name);

                var winRate = playerGames.Count > 0 ?
                    (int)Math.Round((double)wins / playerGames.Count * 100) : 0;

                stats.Add(new PlayerStats
                {
                    Name = player.Name,
                    Wins = wins,
                    SecondPlaces = secondPlaces,
                    ThirdPlaces = thirdPlaces,
                    Losses = losses,
                    TotalGames = playerGames.Count,
                    WinRate = winRate
                });
            }
        }

        return stats.OrderByDescending(s => s.Wins)
                    .ThenByDescending(s => s.WinRate)
                    .ThenBy(s => s.Name)
                    .ToList();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender || refreshChart)
        {
            if (!isLoading && PlayerStatsList.Any())
            {
                await LoadCharts();
            }
            refreshChart = false;
        }
    }

    async Task LoadCharts()
    {
        try
        {
            // Wins Chart (Bar chart)
            await JS.InvokeVoidAsync("renderBarChart",
                "winsChart",
                "Player Wins",
                PlayerStatsList.Select(s => s.Name).Take(8).ToArray(),
                PlayerStatsList.Select(s => s.Wins).Take(8).ToArray(),
                "#27ae60");

            // Win Rate Chart (Line chart)
            await JS.InvokeVoidAsync("renderLineChart",
                "winRateChart",
                "Win Percentage %",
                PlayerStatsList.Select(s => s.Name).Take(8).ToArray(),
                PlayerStatsList.Select(s => s.WinRate).Take(8).ToArray(),
                "#3498db");

            // Positions Pie Chart for top player
            var topPlayer = PlayerStatsList.FirstOrDefault();
            if (topPlayer != null && (topPlayer.Wins + topPlayer.SecondPlaces + topPlayer.ThirdPlaces + topPlayer.Losses) > 0)
            {
                await JS.InvokeVoidAsync("renderPieChart",
                    "positionsChart",
                    new[] { "Wins", "2nd Place", "3rd Place", "4th Place" },
                    new[] { topPlayer.Wins, topPlayer.SecondPlaces, topPlayer.ThirdPlaces, topPlayer.Losses },
                    new[] { "#27ae60", "#3498db", "#f39c12", "#e74c3c" });
            }
            else
            {
                // Show empty chart message
                await JS.InvokeVoidAsync("renderEmptyChart", "positionsChart", "No data available");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading charts: {ex.Message}");
        }
    }

    void NavigateToAddGame()
    {
        Navigation.NavigateTo("/add-game");
    }

    // Call this method when you want to refresh the data (e.g., after adding a game)
    public void RefreshDashboard()
    {
        LoadData();
        refreshChart = true;
        StateHasChanged();
    }
    // Add this method to calculate specialized rankings
    public List<PlayerStats> GetCustomRankedPlayers()
    {
        var players = PlayerStatsList.ToList();

        if (players.Count < 4)
            return players.OrderByDescending(p => p.Wins).ToList();

        // Clone the list for manipulation
        var rankedPlayers = new List<PlayerStats>();
        var remainingPlayers = players.ToList();

        // 1st: Most wins
        var firstPlace = remainingPlayers.OrderByDescending(p => p.Wins).First();
        rankedPlayers.Add(firstPlace);
        remainingPlayers.Remove(firstPlace);

        // 2nd: Most 2nd place finishes (from remaining players)
        var secondPlace = remainingPlayers
            .OrderByDescending(p => p.SecondPlaces)
            .ThenByDescending(p => p.Wins)
            .First();
        rankedPlayers.Add(secondPlace);
        remainingPlayers.Remove(secondPlace);

        // 3rd: Most 3rd place finishes (from remaining players)
        var thirdPlace = remainingPlayers
            .OrderByDescending(p => p.ThirdPlaces)
            .ThenByDescending(p => p.Wins)
            .First();
        rankedPlayers.Add(thirdPlace);
        remainingPlayers.Remove(thirdPlace);

        // 4th: Most losses (from remaining players)
        var fourthPlace = remainingPlayers
            .OrderByDescending(p => p.Losses)
            .ThenBy(p => p.Wins)
            .First();
        rankedPlayers.Add(fourthPlace);
        remainingPlayers.Remove(fourthPlace);

        // Add remaining players sorted by wins
        rankedPlayers.AddRange(remainingPlayers.OrderByDescending(p => p.Wins));

        return rankedPlayers;
    }

    // Add this class if not already defined elsewhere
    public class PlayerStats
    {
        public string Name { get; set; }
        public int Wins { get; set; }
        public int SecondPlaces { get; set; }
        public int ThirdPlaces { get; set; }
        public int Losses { get; set; }
        public int TotalGames { get; set; }
        public int WinRate { get; set; }
    }
    public class LeaderboardPlayer
    {
        public PlayerStats Player { get; set; }
        public int RankingPoints { get; set; }
    }
