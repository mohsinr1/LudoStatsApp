@page "/"
@using LudoStatsApp.Models
@using LudoStatsApp.Services
@inject GameStorageService Storage
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h2 class="title">📊 Ludo Dashboard</h2>

<div class="header-actions">
    <button class="btn-add-game" @onclick="NavigateToAddGame">🎲 Add New Game</button>
</div>

<div class="card">
    <h3>📈 Stats</h3>
    <p><strong>Total Games:</strong> @Games.Count</p>
</div>

<div class="card">
    <h3>📊 Player Statistics</h3>

    <div class="charts-container">
        <!-- Player Leaderboard -->
        <div class="chart-section">
            <h4>🏆 Player Leaderboard</h4>
            <div class="leaderboard">
                @{
                    // Get all players with their stats
                    var playersWithStats = new List<LeaderboardPlayer>();

                    foreach (var player in PlayerStatsList)
                    {
                        // Calculate points for ranking
                        // Wins are most important, then positions
                        var rankingPoints = (player.Wins * 100) +
                        (player.SecondPlaces * 30) +
                        (player.ThirdPlaces * 10) -
                        (player.Losses * 5);

                        playersWithStats.Add(new LeaderboardPlayer
                        {
                            Player = player,
                            RankingPoints = rankingPoints
                        });
                    }

                    // Custom ranking logic
                    var rankedPlayers = playersWithStats
                    .OrderByDescending(p => p.Player.Wins)  // First by wins
                    .ThenByDescending(p => p.Player.SecondPlaces) // Then by 2nd places
                    .ThenByDescending(p => p.Player.ThirdPlaces)  // Then by 3rd places
                    .ThenByDescending(p => p.Player.WinRate)      // Then by win rate
                    .ThenByDescending(p => p.RankingPoints)       // Then by total points
                    .Select(p => p.Player)
                    .Take(5)
                    .ToList();
                }

                @if (rankedPlayers.Count >= 4)
                {
                    <!-- 1st Place: Most Wins -->
                    var firstPlace = rankedPlayers[0];
                    <div class="leaderboard-item first-place">
                        <span class="rank rank-1">1</span>
                        <span class="player-name">@firstPlace.Name</span>
                        <div class="stats">
                            <span class="wins" title="Total Wins">🏆 @firstPlace.Wins</span>
                            <span class="win-rate" title="Win Rate">📈 @firstPlace.WinRate%</span>
                            <span class="position-stats" title="2nd: @firstPlace.SecondPlaces | 3rd: @firstPlace.ThirdPlaces | 4th: @firstPlace.Losses">
                                🎯 @firstPlace.SecondPlaces/@firstPlace.ThirdPlaces/@firstPlace.Losses
                            </span>
                        </div>
                        <div class="rank-badge">🏆 WINNER</div>
                    </div>

                    <!-- 2nd Place: Most 2nd Place Finishes -->
                    var secondPlace = rankedPlayers
                    .Where(p => p != firstPlace)
                    .OrderByDescending(p => p.SecondPlaces)
                    .ThenByDescending(p => p.Wins)
                    .FirstOrDefault();

                    @if (secondPlace != null)
                    {
                        <div class="leaderboard-item second-place">
                            <span class="rank rank-2">2</span>
                            <span class="player-name">@secondPlace.Name</span>
                            <div class="stats">
                                <span class="wins" title="Total Wins">🏆 @secondPlace.Wins</span>
                                <span class="win-rate" title="Win Rate">📈 @secondPlace.WinRate%</span>
                                <span class="position-stats highlight-second" title="2nd Place Finishes">
                                    🥈 @secondPlace.SecondPlaces
                                </span>
                            </div>
                        </div>

                        <!-- 3rd Place: Most 3rd Place Finishes -->
                        var thirdPlace = rankedPlayers
                        .Where(p => p != firstPlace && p != secondPlace)
                        .OrderByDescending(p => p.ThirdPlaces)
                        .ThenByDescending(p => p.Wins)
                        .FirstOrDefault();

                        @if (thirdPlace != null)
                        {
                            <div class="leaderboard-item third-place">
                                <span class="rank rank-3">3</span>
                                <span class="player-name">@thirdPlace.Name</span>
                                <div class="stats">
                                    <span class="wins" title="Total Wins">🏆 @thirdPlace.Wins</span>
                                    <span class="win-rate" title="Win Rate">📈 @thirdPlace.WinRate%</span>
                                    <span class="position-stats highlight-third" title="3rd Place Finishes">
                                        🥉 @thirdPlace.ThirdPlaces
                                    </span>
                                </div>
                            </div>

                            <!-- 4th Place: Most Losses -->
                            var fourthPlace = rankedPlayers
                            .Where(p => p != firstPlace && p != secondPlace && p != thirdPlace)
                            .OrderByDescending(p => p.Losses)
                            .ThenBy(p => p.Wins)  // Fewer wins = more likely to be last
                            .FirstOrDefault();

                            @if (fourthPlace != null)
                            {
                                <div class="leaderboard-item fourth-place">
                                    <span class="rank rank-4">4</span>
                                    <span class="player-name">@fourthPlace.Name</span>
                                    <div class="stats">
                                        <span class="wins" title="Total Wins">🏆 @fourthPlace.Wins</span>
                                        <span class="win-rate" title="Win Rate">📈 @fourthPlace.WinRate%</span>
                                        <span class="position-stats highlight-fourth" title="4th Place Finishes">
                                            📉 @fourthPlace.Losses
                                        </span>
                                    </div>
                                </div>
                            }
                        }
                    }
                }
                else if (rankedPlayers.Count > 0)
                {
                    <!-- Fallback to simple ranking if not enough players -->
                    @for (int i = 0; i < rankedPlayers.Count; i++)
                    {
                        var player = rankedPlayers[i];
                        <div class="leaderboard-item">
                            <span class="rank rank-@(i + 1)">@(i + 1)</span>
                            <span class="player-name">@player.Name</span>
                            <div class="stats">
                                <span class="wins">🏆 @player.Wins</span>
                                <span class="win-rate">📈 @player.WinRate%</span>
                                <span class="position-stats">
                                    🎯 @player.SecondPlaces/@player.ThirdPlaces/@player.Losses
                                </span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-data">No games recorded yet</div>
                }

                <!-- Show remaining players if any -->
                @if (rankedPlayers.Count > 4)
                {
                    <div class="other-players">
                        <h5>Other Players</h5>
                        @foreach (var player in rankedPlayers.Skip(4))
                        {
                            <div class="other-player-item">
                                <span class="player-name">@player.Name</span>
                                <span class="wins-small">(@player.Wins wins)</span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Wins Chart -->
        <div class="chart-section">
            <h4>📈 Wins Distribution</h4>
            <div class="chart-wrapper">
                <canvas id="winsChart" height="120"></canvas>
            </div>
        </div>

        <!-- Win Rate Chart -->
        <div class="chart-section">
            <h4>📊 Win Percentage</h4>
            <div class="chart-wrapper">
                <canvas id="winRateChart" height="120"></canvas>
            </div>
        </div>

        <!-- Positions Pie Chart -->
        <div class="chart-section">
            <h4>🎯 Top Player Breakdown</h4>
            <div class="chart-wrapper">
                <canvas id="positionsChart" height="120"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <h3>📜 Recent Games</h3>
    @if (Games.Count > 0)
    {
        <table class="game-history">
            <thead>
                <tr>
                    <th>Winner</th>
                    <th>2nd</th>
                    <th>3rd</th>
                    <th>4th</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Games.TakeLast(5).Reverse())
                {
                    <tr>
                        <td class="winner">🏆 @game.Winner</td>
                        <td>🥈 @game.SecondPlace</td>
                        <td>🥉 @game.ThirdPlace</td>
                        <td>📉 @game.Loser</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-data">No games recorded yet. Add your first game!</div>
    }
</div>

