@page "/history"
@using LudoStatsApp.Models
@using LudoStatsApp.Services
@inject GameStorageService Storage
@inject NavigationManager Navigation

<div class="page-header">
    <h2 class="title">📜 Game History</h2>
    <button class="btn-back" @onclick="NavigateToHome">← Back to Dashboard</button>
</div>

<!-- Filter Section -->
<div class="card filter-section">
    <h3>🔍 Filter Games</h3>
    <div class="filter-controls">
        <div class="filter-group">
            <label>Filter by Player:</label>
            <select class="input" @bind="selectedPlayer">
                <option value="">All Players</option>
                @foreach (var p in Players)
                {
                    <option value="@p.Name">@p.Name</option>
                }
            </select>
        </div>
        
        <div class="filter-group">
            <label>Results per page:</label>
            <select class="input" @bind="pageSize">
                <option value="10">10 games</option>
                <option value="20">20 games</option>
                <option value="50">50 games</option>
                <option value="100">100 games</option>
            </select>
        </div>
        
        <div class="filter-stats">
            <span class="stat-badge">📊 Total Games: @Games.Count</span>
            <span class="stat-badge">👥 Players: @Players.Count</span>
            @if (!string.IsNullOrEmpty(selectedPlayer))
            {
                <span class="stat-badge">👤 Filtered: @FilteredGames.Count games</span>
            }
        </div>
    </div>
</div>

<!-- Player Statistics Cards -->
<div class="card">
    <h3>📊 Player Statistics</h3>
    <div class="player-stats-grid">
        @foreach (var stat in PlayerStats)
        {
            <div class="player-stat-card @(stat.Name == selectedPlayer ? "highlight" : "")" 
                 @onclick="() => SelectPlayer(stat.Name)">
                <div class="player-header">
                    <h4>@stat.Name</h4>
                    <span class="total-games">🎲 @stat.Games game@(stat.Games != 1 ? "s" : "")</span>
                </div>
                
                <div class="stat-row">
                    <div class="stat-item">
                        <span class="stat-icon">🏆</span>
                        <div class="stat-details">
                            <div class="stat-value">@stat.Wins</div>
                            <div class="stat-label">Wins</div>
                        </div>
                    </div>
                    <div class="stat-item">
                        <span class="stat-icon">🥈</span>
                        <div class="stat-details">
                            <div class="stat-value">@stat.Seconds</div>
                            <div class="stat-label">2nd Place</div>
                        </div>
                    </div>
                </div>
                
                <div class="stat-row">
                    <div class="stat-item">
                        <span class="stat-icon">🥉</span>
                        <div class="stat-details">
                            <div class="stat-value">@stat.Thirds</div>
                            <div class="stat-label">3rd Place</div>
                        </div>
                    </div>
                    <div class="stat-item">
                        <span class="stat-icon">❌</span>
                        <div class="stat-details">
                            <div class="stat-value">@stat.Losses</div>
                            <div class="stat-label">Losses</div>
                        </div>
                    </div>
                </div>
                
                <div class="progress-section">
                    <div class="progress-bar">
                        <div class="progress-win" style="width: @stat.WinPercent%"></div>
                        <div class="progress-loss" style="width: @stat.LossPercent%"></div>
                    </div>
                    <div class="progress-labels">
                        <span class="win-label">Win: @stat.WinPercent%</span>
                        <span class="loss-label">Loss: @stat.LossPercent%</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Game History Table -->
<div class="card">
    <div class="table-header">
        <h3>🎮 Game History</h3>
        <div class="pagination-controls">
            <button class="btn-prev" @onclick="PreviousPage" :disabled="@(currentPage <= 1)">← Previous</button>
            <span class="page-info">Page @currentPage of @totalPages</span>
            <button class="btn-next" @onclick="NextPage" :disabled="@(currentPage >= totalPages)">Next →</button>
        </div>
    </div>
    
    <div class="table-container">
        <table class="game-history-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th class="winner-col">🏆 Winner</th>
                    <th class="second-col">🥈 2nd Place</th>
                    <th class="third-col">🥉 3rd Place</th>
                    <th class="loser-col">❌ 4th Place</th>
                    <th class="actions-col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (FilteredGames.Any())
                {
                    @foreach (var game in PagedGames)
                    {
                        <tr class="@(editGame == game ? "editing" : "")">
                            @if (editGame == game)
                            {
                                <td>
                                    <input type="date" class="input" @bind="editDate" format-value="yyyy-MM-dd" />
                                </td>
                                <td>
                                    <select class="input" @bind="editWinner">
                                        @foreach (var p in Players)
                                        {
                                            <option value="@p.Name">@p.Name</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <select class="input" @bind="editSecond">
                                        @foreach (var p in Players)
                                        {
                                            <option value="@p.Name">@p.Name</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <select class="input" @bind="editThird">
                                        @foreach (var p in Players)
                                        {
                                            <option value="@p.Name">@p.Name</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <select class="input" @bind="editLoser">
                                        @foreach (var p in Players)
                                        {
                                            <option value="@p.Name">@p.Name</option>
                                        }
                                    </select>
                                </td>
                                <td class="actions-cell">
                                    <div class="action-buttons">
                                        <button class="btn-save" @onclick="SaveEdit" title="Save changes">
                                            <span class="icon">✓</span> Save
                                        </button>
                                        <button class="btn-cancel" @onclick="CancelEdit" title="Cancel edit">
                                            <span class="icon">✕</span> Cancel
                                        </button>
                                    </div>
                                </td>
                            }
                            else
                            {
                                <td class="date-cell">
                                    <span class="date">@game.Date?.ToString("MMM dd, yyyy")</span>
                                    <span class="time">@game.Date?.ToString("HH:mm")</span>
                                </td>
                                <td class="winner-cell">
                                    <span class="player-badge winner">🏆 @game.Winner</span>
                                </td>
                                <td class="second-cell">
                                    <span class="player-badge second">🥈 @game.SecondPlace</span>
                                </td>
                                <td class="third-cell">
                                    <span class="player-badge third">🥉 @game.ThirdPlace</span>
                                </td>
                                <td class="loser-cell">
                                    <span class="player-badge loser">❌ @game.Loser</span>
                                </td>
                                <td class="actions-cell">
                                    <div class="action-buttons">
                                        <button class="btn-edit" @onclick="() => StartEdit(game)" title="Edit game">
                                            <span class="icon">✏️</span> Edit
                                        </button>
                                        <button class="btn-delete" @onclick="() => DeleteGame(game)" title="Delete game">
                                            <span class="icon">🗑️</span> Delete
                                        </button>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="no-games">
                            <div class="empty-state">
                                <div class="empty-icon">📊</div>
                                <h4>No games found</h4>
                                <p>@(string.IsNullOrEmpty(selectedPlayer) ? "Add your first game to see history!" : $"No games found for {selectedPlayer}")</p>
                                <button class="btn-add-game" @onclick="NavigateToAddGame">🎲 Add New Game</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="table-footer">
        <span class="total-info">Showing @((currentPage - 1) * pageSize + 1)-@Math.Min(currentPage * pageSize, FilteredGames.Count) of @FilteredGames.Count games</span>
        @if (!string.IsNullOrEmpty(selectedPlayer))
        {
            <button class="btn-clear-filter" @onclick="ClearFilter">Clear Filter</button>
        }
    </div>
</div>

