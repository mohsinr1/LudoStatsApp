@code {
    List<GameResult> Games = new();
    List<Player> Players = new();

    string selectedPlayer = "";
    int currentPage = 1;
    int pageSize = 10;

    GameResult? editGame;
    string editWinner = "";
    string editSecond = "";
    string editThird = "";
    string editLoser = "";
    DateTime? editDate;

    protected override void OnInitialized()
    {
        LoadData();
    }

    void LoadData()
    {
        Games = Storage.GetGames();
        Players = Storage.GetPlayers();
    }

    List<GameResult> FilteredGames =>
        string.IsNullOrEmpty(selectedPlayer)
            ? Games.OrderByDescending(g => g.Date ?? DateTime.MinValue).ToList()
            : Games.Where(g =>
                g.Winner == selectedPlayer ||
                g.SecondPlace == selectedPlayer ||
                g.ThirdPlace == selectedPlayer ||
                g.Loser == selectedPlayer)
                  .OrderByDescending(g => g.Date ?? DateTime.MinValue)
                  .ToList();

    List<GameResult> PagedGames =>
        FilteredGames.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();

    int totalPages => (int)Math.Ceiling((double)FilteredGames.Count / pageSize);

    void SelectPlayer(string playerName)
    {
        selectedPlayer = selectedPlayer == playerName ? "" : playerName;
        currentPage = 1; // Reset to first page when filtering
    }

    void ClearFilter()
    {
        selectedPlayer = "";
        currentPage = 1;
    }

    void PreviousPage()
    {
        if (currentPage > 1) currentPage--;
    }

    void NextPage()
    {
        if (currentPage < totalPages) currentPage++;
    }

    void DeleteGame(GameResult game)
    {
        Games.Remove(game);
        Storage.SaveGames(Games);
        currentPage = Math.Min(currentPage, totalPages); // Adjust page if needed
    }

    void StartEdit(GameResult game)
    {
        editGame = game;
        editWinner = game.Winner;
        editSecond = game.SecondPlace;
        editThird = game.ThirdPlace;
        editLoser = game.Loser;
        editDate = game.Date;
    }

    void SaveEdit()
    {
        if (editGame != null)
        {
            editGame.Winner = editWinner;
            editGame.SecondPlace = editSecond;
            editGame.ThirdPlace = editThird;
            editGame.Loser = editLoser;
            editGame.Date = editDate;

            Storage.SaveGames(Games);
            editGame = null;
        }
    }

    void CancelEdit() => editGame = null;

    // Player Statistics
    IEnumerable<PlayerStat> PlayerStats =>
        Players.Select(p =>
        {
            var totalGames = Games.Count(g =>
                g.Winner == p.Name ||
                g.SecondPlace == p.Name ||
                g.ThirdPlace == p.Name ||
                g.Loser == p.Name);

            var wins = Games.Count(g => g.Winner == p.Name);
            var seconds = Games.Count(g => g.SecondPlace == p.Name);
            var thirds = Games.Count(g => g.ThirdPlace == p.Name);
            var losses = Games.Count(g => g.Loser == p.Name);

            var winPercent = totalGames == 0 ? 0 : Math.Round((double)wins / totalGames * 100, 1);
            var lossPercent = totalGames == 0 ? 0 : Math.Round((double)losses / totalGames * 100, 1);

            return new PlayerStat
            {
                Name = p.Name,
                Games = totalGames,
                Wins = wins,
                Seconds = seconds,
                Thirds = thirds,
                Losses = losses,
                WinPercent = winPercent,
                LossPercent = lossPercent
            };
        }).OrderByDescending(s => s.Games).ToList();

    void NavigateToHome() => Navigation.NavigateTo("/");
    
    void NavigateToAddGame() => Navigation.NavigateTo("/add-game");

    // Helper class for player statistics
    class PlayerStat
    {
        public string Name { get; set; } = "";
        public int Games { get; set; }
        public int Wins { get; set; }
        public int Seconds { get; set; }
        public int Thirds { get; set; }
        public int Losses { get; set; }
        public double WinPercent { get; set; }
        public double LossPercent { get; set; }
    }
}