@code {
    List<Player> Players = new();
    List<GameResult> Games = new();

    string Winner = "";
    string Second = "";
    string Third = "";
    string Loser = "";
    string GameDateString = DateTime.Now.ToString("yyyy-MM-dd"); // Keep as string for binding
    DateTime? selectedDate = DateTime.Now; // Store as DateTime? for the model

    bool showSuccess = false;
    string? errorMessage = null;

    private bool IsValid =>
        !string.IsNullOrWhiteSpace(Winner) &&
        !string.IsNullOrWhiteSpace(Second) &&
        !string.IsNullOrWhiteSpace(Third) &&
        !string.IsNullOrWhiteSpace(Loser) &&
        ArePlayersUnique();

    protected override void OnInitialized()
    {
        Players = Storage.GetPlayers();
        Games = Storage.GetGames();
    }

    private bool ArePlayersUnique()
    {
        var players = new List<string> { Winner, Second, Third, Loser };
        return players.Distinct().Count() == 4;
    }

    private bool IsPlayerSelected(string playerName)
    {
        return !string.IsNullOrWhiteSpace(playerName) &&
               playerName != "-- Select Winner --" &&
               playerName != "-- Select Player --";
    }

    private int GetPlayerWins(string playerName)
    {
        return Games.Count(g => g.Winner == playerName);
    }

    private int GetPlayerWinRate(string playerName)
    {
        var playerGames = Games.Count(g =>
            g.Winner == playerName ||
            g.SecondPlace == playerName ||
            g.ThirdPlace == playerName ||
            g.Loser == playerName);
        
        if (playerGames == 0) return 0;
        
        var wins = GetPlayerWins(playerName);
        return (int)Math.Round((double)wins / playerGames * 100);
    }

    void OnDateChanged(ChangeEventArgs e)
    {
        GameDateString = e.Value?.ToString() ?? DateTime.Now.ToString("yyyy-MM-dd");
        
        // Parse to DateTime for the model
        if (DateTime.TryParse(GameDateString, out DateTime parsedDate))
        {
            selectedDate = parsedDate;
        }
        else
        {
            selectedDate = DateTime.Now;
        }
    }

    async Task SaveGame()
    {
        try
        {
            if (!ArePlayersUnique())
            {
                errorMessage = "All players must be unique!";
                return;
            }

            var games = Storage.GetGames();
            
            var newGame = new GameResult
            {
                Winner = Winner,
                SecondPlace = Second,
                ThirdPlace = Third,
                Loser = Loser,
                Date = selectedDate // Use the parsed DateTime
            };

            games.Add(newGame);
            Storage.SaveGames(games);

            showSuccess = true;
            errorMessage = null;

            // Clear form after saving
            await Task.Delay(2000);
            showSuccess = false;
            ResetForm();
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving game: {ex.Message}";
        }
    }

    void Cancel()
    {
        Navigation.NavigateTo("/");
    }

    void ResetForm()
    {
        Winner = "";
        Second = "";
        Third = "";
        Loser = "";
        GameDateString = DateTime.Now.ToString("yyyy-MM-dd");
        selectedDate = DateTime.Now;
        errorMessage = null;
    }

    void NavigateToHome() => Navigation.NavigateTo("/");
}