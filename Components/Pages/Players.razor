@code {
    List<Player> PlayersList = new();
    List<GameResult> Games = new();
    string newPlayer = "";
    string errorMessage = "";
    string searchQuery = "";

    // Edit state
    Player? editPlayer = null;
    string editName = "";

    // Delete modal state
    bool showDeleteModal = false;
    Player? playerToDelete = null;

    protected override void OnInitialized()
    {
        LoadData();
    }

    void LoadData()
    {
        PlayersList = Storage.GetPlayers();
        Games = Storage.GetGames();
    }

    List<Player> FilteredPlayers =>
        string.IsNullOrEmpty(searchQuery)
            ? PlayersList.OrderBy(p => p.Name).ToList()
            : PlayersList.Where(p => p.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
                         .OrderBy(p => p.Name)
                         .ToList();

    int TotalGamesPlayed => Games.Count;
    int TopPlayerWins => PlayersList.Max(p => GetPlayerStats(p.Name).Wins);

    (int TotalGames, int Wins, int WinRate) GetPlayerStats(string playerName)
    {
        var playerGames = Games.Where(g =>
            g.Winner == playerName ||
            g.SecondPlace == playerName ||
            g.ThirdPlace == playerName ||
            g.Loser == playerName).ToList();

        var wins = Games.Count(g => g.Winner == playerName);
        var winRate = playerGames.Count > 0 ? (int)Math.Round((double)wins / playerGames.Count * 100) : 0;

        return (playerGames.Count, wins, winRate);
    }

    void AddPlayer()
    {
        if (string.IsNullOrWhiteSpace(newPlayer))
        {
            errorMessage = "Please enter a player name";
            return;
        }

        if (PlayersList.Any(p => p.Name.Equals(newPlayer, StringComparison.OrdinalIgnoreCase)))
        {
            errorMessage = $"Player '{newPlayer}' already exists";
            return;
        }

        PlayersList.Add(new Player { Name = newPlayer.Trim() });
        Storage.SavePlayers(PlayersList);
        newPlayer = "";
        errorMessage = "";
    }

    void ClearForm()
    {
        newPlayer = "";
        errorMessage = "";
    }

    void StartEdit(Player player)
    {
        editPlayer = player;
        editName = player.Name;
    }

    void CancelEdit()
    {
        editPlayer = null;
        editName = "";
    }

    void UpdatePlayer(Player player)
    {
        if (string.IsNullOrWhiteSpace(editName))
        {
            errorMessage = "Player name cannot be empty";
            return;
        }

        if (editName != player.Name && PlayersList.Any(p => p.Name.Equals(editName, StringComparison.OrdinalIgnoreCase)))
        {
            errorMessage = $"Player '{editName}' already exists";
            return;
        }

        player.Name = editName.Trim();
        Storage.SavePlayers(PlayersList);
        CancelEdit();
        errorMessage = "";
    }

    void ShowDeleteConfirmation(Player player)
    {
        playerToDelete = player;
        showDeleteModal = true;
    }

    void HideDeleteConfirmation()
    {
        showDeleteModal = false;
        playerToDelete = null;
    }

    void ConfirmDelete()
    {
        if (playerToDelete != null)
        {
            PlayersList.Remove(playerToDelete);
            Storage.SavePlayers(PlayersList);

            // Also remove this player from all games
            var updatedGames = Games.Where(g =>
                g.Winner != playerToDelete.Name &&
                g.SecondPlace != playerToDelete.Name &&
                g.ThirdPlace != playerToDelete.Name &&
                g.Loser != playerToDelete.Name).ToList();

            Storage.SaveGames(updatedGames);
            Games = updatedGames;
        }

        HideDeleteConfirmation();
    }

    void ClearSearch()
    {
        searchQuery = "";
    }

    void OnPlayerInputKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            AddPlayer();
        }
    }

    void OnEditInputKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            if (editPlayer != null)
            {
                UpdatePlayer(editPlayer);
            }
        }
        else if (e.Key == "Escape")
        {
            CancelEdit();
        }
    }

    void NavigateToHome() => Navigation.NavigateTo("/");
}