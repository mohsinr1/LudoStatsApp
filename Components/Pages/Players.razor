@page "/players"
@using LudoStatsApp.Models
@using LudoStatsApp.Services
@inject GameStorageService Storage
@inject NavigationManager Navigation

<div class="page-header">
    <h2 class="title">👥 Players Management</h2>
    <button class="btn-back" @onclick="NavigateToHome">← Back to Dashboard</button>
</div>

<!-- Add Player Card -->
<div class="card">
    <h3>➕ Add New Player</h3>
    <div class="add-player-form">
        <div class="input-group">
            <label for="newPlayer">Player Name</label>
            <input type="text"
                   id="newPlayer"
                   placeholder="Enter player name..."
                   @bind="newPlayer"
                   class="player-input"
                   @onkeyup="OnPlayerInputKeyUp" />
        </div>
        <div class="form-actions">
            <button class="btn btn-primary" @onclick="AddPlayer" :disabled="@(string.IsNullOrWhiteSpace(newPlayer))">
                <span class="btn-icon">➕</span> Add Player
            </button>
            <button class="btn btn-secondary" @onclick="ClearForm">
                <span class="btn-icon">🗑️</span> Clear
            </button>
        </div>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-error">
                <span class="alert-icon">⚠️</span>
                @errorMessage
            </div>
        }
    </div>
</div>

<!-- Players Statistics -->
<div class="card">
    <div class="stats-header">
        <h3>📊 Players Overview</h3>
        <span class="total-badge">Total: @PlayersList.Count players</span>
    </div>
    <div class="players-stats">
        <div class="stat-card">
            <div class="stat-icon">👤</div>
            <div class="stat-content">
                <div class="stat-value">@PlayersList.Count</div>
                <div class="stat-label">Total Players</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">🎮</div>
            <div class="stat-content">
                <div class="stat-value">@TotalGamesPlayed</div>
                <div class="stat-label">Played Games</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">🏆</div>
            <div class="stat-content">
                <div class="stat-value">@TopPlayerWins</div>
                <div class="stat-label">Most Wins</div>
            </div>
        </div>
    </div>
</div>

<!-- Players List -->
<div class="card">
    <div class="table-header">
        <h3>📋 All Players</h3>
        <div class="search-box">
            <input type="text"
                   placeholder="Search players..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   class="search-input" />
            <span class="search-icon">🔍</span>
        </div>
    </div>

    <div class="table-container">
        @if (FilteredPlayers.Any())
        {
            <table class="players-table">
                <thead>
                    <tr>
                        <th class="player-col">Player</th>
                        <th class="games-col">Games Played</th>
                        <th class="wins-col">Wins</th>
                        <th class="actions-col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in FilteredPlayers)
                    {
                        var playerStats = GetPlayerStats(player.Name);
                        <tr>
                            <td class="player-cell">
                                <div class="player-info">
                                    <div class="player-avatar">@player.Name.Substring(0, 1).ToUpper()</div>
                                    <div class="player-details">
                                        <div class="player-name">@player.Name</div>
                                        <div class="player-meta">
                                            @if (playerStats.TotalGames > 0)
                                            {
                                                <span class="meta-item">Win Rate: @playerStats.WinRate%</span>
                                            }
                                            else
                                            {
                                                <span class="meta-item">No games played</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="games-cell">
                                <span class="games-count">@playerStats.TotalGames</span>
                            </td>
                            <td class="wins-cell">
                                @if (playerStats.Wins > 0)
                                {
                                    <span class="wins-badge">🏆 @playerStats.Wins</span>
                                }
                                else
                                {
                                    <span class="no-wins">-</span>
                                }
                            </td>
                            <td class="actions-cell">
                                @if (editPlayer == player)
                                {
                                    <div class="edit-form">
                                        <input type="text"
                                               @bind="editName"
                                               class="edit-input"
                                               @onkeyup="OnEditInputKeyUp" />
                                        <div class="edit-actions">
                                            <button class="btn btn-success btn-sm" @onclick="@(() => UpdatePlayer(player))"
                                                    :disabled="@(string.IsNullOrWhiteSpace(editName) || editName == player.Name)">
                                                <span class="btn-icon">✓</span> Save
                                            </button>
                                            <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                                                <span class="btn-icon">✕</span> Cancel
                                            </button>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="action-buttons">
                                        <button class="btn btn-edit" @onclick="@(() => StartEdit(player))" title="Edit player">
                                            <span class="btn-icon">✏️</span> Edit
                                        </button>
                                        <button class="btn btn-delete" @onclick="@(() => ShowDeleteConfirmation(player))" title="Delete player">
                                            <span class="btn-icon">🗑️</span> Delete
                                        </button>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">👤</div>
                <h4>No players found</h4>
                <p>@(string.IsNullOrEmpty(searchQuery) ? "Add your first player to get started!" : $"No players match '{searchQuery}'")</p>
                @if (!string.IsNullOrEmpty(searchQuery))
                {
                    <button class="btn btn-primary" @onclick="ClearSearch">Clear Search</button>
                }
            </div>
        }
    </div>

    <div class="table-footer">
        <span class="player-count">Showing @FilteredPlayers.Count of @PlayersList.Count players</span>
        @if (!string.IsNullOrEmpty(searchQuery))
        {
            <button class="btn btn-secondary btn-sm" @onclick="ClearSearch">Clear Search</button>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal)
{
    <div class="modal-overlay">
        <div class="modal">
            <div class="modal-header">
                <h3>🗑️ Delete Player</h3>
                <button class="modal-close" @onclick="HideDeleteConfirmation">×</button>
            </div>
            <div class="modal-content">
                <p>Are you sure you want to delete <strong>@playerToDelete?.Name</strong>?</p>
                @if (GetPlayerStats(playerToDelete?.Name ?? "").TotalGames > 0)
                {
                    <div class="alert alert-warning">
                        <span class="alert-icon">⚠️</span>
                        This player has played in @GetPlayerStats(playerToDelete?.Name ?? "").TotalGames game(s).
                        Deleting them will remove all their game history.
                    </div>
                }
            </div>
            <div class="modal-actions">
                <button class="btn btn-danger" @onclick="ConfirmDelete">
                    <span class="btn-icon">🗑️</span> Delete Player
                </button>
                <button class="btn btn-secondary" @onclick="HideDeleteConfirmation">
                    <span class="btn-icon">✕</span> Cancel
                </button>
            </div>
        </div>
    </div>
}

